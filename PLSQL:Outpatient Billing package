                                 on_return  out number, -- Result code
                                 on_message out varchar2 -- Result description
                                 );

  -- 4.3.3 Same-day Registration Interface 001
  procedure addRegOrder001(axmlparm   in varchar2,
                           aCur_temp  out sys_refcursor,
                           on_return  out number, -- Result code
                           on_message out varchar2 -- Result description
                           );

